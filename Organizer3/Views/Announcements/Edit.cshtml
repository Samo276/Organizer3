@model AnnouncerCreateModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4 class="mb-1">Edytuj</h4>

<div class="row">
    <div>
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="Title" class="control-label mb-1">Tytuł</label>
                <input asp-for="Title" class="form-control mb-1" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>     
            
            <div class="form-group">
                <label asp-for="MessageContent" class="control-label mb-1">Treść</label>
                <!--input asp-for="MessageContent" class="form-control" /-->
                @Html.TextAreaFor(m => m.MessageContent, new { @class = "form-control", @style="min-height:20em;"})
                <span asp-validation-for="MessageContent" class="text-danger"></span>
            </div>    
            <div class="row mt-1 float-end">
                <div class="form-group col-md-2">
                    <input type="submit" value="Zapisz" class="btn btn-primary" />
                </div>
            </div>
        </form>
        <a type="button" class=" mt-1 mr-1 float-end  btn btn-outline-light text-dark" asp-controller="Announcements" asp-action="AnnouncerIndex">Wstecz</a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
