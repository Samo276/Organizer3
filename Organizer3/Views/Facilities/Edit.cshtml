@model Organizer3.Models.FacilitiesEditor.FacilitiesListModel

@{
    ViewData["Title"] = "Edit";
}

<div class="row">
<h4 class="col-md-11">@("Edytujesz: "+@Model.Name) </h4>
<button type="button" class="btn btn-secondary col-md-1">        
        <a class="text-decoration-none text-white" asp-controller="Facilities" asp-action="Details" asp-route-sId="@Model.Id">
            Wstecz
        </a>
      </button>
</div>
<hr />

<div class="row">
    <div>
        <form asp-action="SaveEdit">
            <div asp-validation-summary="ModelOnly" class="text-danger">Nazwa</div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group col-md-4">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="Region" class="control-label"></label>
                <input asp-for="Region" class="form-control" />
                <span asp-validation-for="Region" class="text-danger"></span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="City" class="control-label">Miasto</label>
                <input asp-for="City" class="form-control" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="PostalCode" class="control-label">kod Pocztowy</label>
                <input asp-for="PostalCode" class="form-control" />
                <span asp-validation-for="PostalCode" class="text-danger"></span>
            </div>
            
            <div class="form-group col-md-4">
                <label asp-for="Adress" class="control-label">Adres</label>
                <input asp-for="Adress" class="form-control" />
                <span asp-validation-for="Adress" class="text-danger"></span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="PhoneNo" class="control-label">Telefon</label>
                <input asp-for="PhoneNo" class="form-control" />
                <span asp-validation-for="PhoneNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Info" class="control-label">Informacje</label>
                @Html.TextAreaFor(m => m.Info, new { @class = "form-control", @style="min-height:7em;"})
                <span asp-validation-for="Info" class="text-danger"></span>
            </div>
            <div class="form-group float-end pt-2">
                <input type="submit" value="Zapisz zmiany" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
