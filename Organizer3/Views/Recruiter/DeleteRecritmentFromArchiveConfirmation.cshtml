@{
}
@model Organizer3.Models.Recriter.DeleteRecritmentFromArchiveConfirmationModel

<div class="container">
    <div class="row justify-content-center">
        <div class="col-6">
            <h4>Potwierdź usunięcie z archiwum:</h4>   
            <h4>@Model.Name</h4>
        </div>
    </div>
    <div class="row justify-content-end">
        <div class="col-6">
            <button type="button" class="btn btn-light ">        
                <a class="text-decoration-none text-black" asp-controller="Recruiter" asp-action="DeleteEntityFromRecruitementArchive" asp-route-Id="@Model.Id">
                    Skasuj
                </a>
            </button>
            <button type="button" class="btn btn-success ">        
                <a class="text-decoration-none text-white" asp-controller="Recruiter" asp-action="DisplayInRecruitment" asp-route-Id="@Model.Id">
                    Wstecz
                </a>
            </button>
        </div>
    </div>
</div>
