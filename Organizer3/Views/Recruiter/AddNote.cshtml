@model Organizer3.Models.Recriter.AddRecruitmentNoteModel

@{
    ViewData["Title"] = "AddNote";
}

<h4>@(@Model.Aplicant+": nowa notatka" )</h4>
<hr />
<div class="row">
    <div>
        <form asp-action="AddNoteToDatabase">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group"> 
                <input asp-for="Id" value="@Model.Id" type="hidden" class="form-control mb-1" />
            </div>
            <div class="form-group"> 
                <input asp-for="Aplicant" type="hidden" value="@Model.Aplicant" class="form-control mb-1" />
            </div>
            <div class="form-group">               
                @Html.TextAreaFor(m => m.NoteContent, new { @class = "form-control", @style="min-height:20em;"})
                <span asp-validation-for="NoteContent" class="text-danger"></span>
            </div>
            <div class="row mt-1 float-end">
                <div class="form-group col-md-2">
                    <input type="submit" value="Utwórz" class="btn btn-primary" />
                </div>
            </div>
            <a type="button" class="button-secondary mt-1 mr-1 float-end  btn btn-outline-light text-dark" asp-controller="Recruiter" asp-action="DisplayInRecruitment" asp-route-Id=@Model.Id>Wstecz</a>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
