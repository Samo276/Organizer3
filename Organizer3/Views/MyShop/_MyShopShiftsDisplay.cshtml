@model Organizer3.Models.MyShop.MyShopProfileModel
<div class="row mt-3">
    <h4 class=col-md-10>Zdefiniowane zmiany</h4>

    <div class=" col-md-2 float-end">    
    <button type="button" class="btn btn-primary float-end">            
            <a class="text-decoration-none text-white" asp-controller="Schedule" asp-action="AddShift">
                Nowa
            </a>
    </button>
    </div>   
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                Nazwa
            </th>
            <th>
                Godzina rozpoczęcia
            </th>
            <th>
                Godzina zakończenia
            </th>
            <th></th>                          
        </tr>
    </thead>

    <tbody>
    @foreach (var item in @Model.MyShopShiftInfo.Where(o=>o.Archived==false)) {
    
        <tr>
            <td>
                @item.ShiftName
            </td>
            <td>
                @item.StartingTime.ToString("HH:mm")
            </td>
            <td>
                @item.StartingTime.AddHours(@item.Duration).ToString("HH:mm")
            </td>
            <td>
                <div class="button-grp float-end">                
                    <a type="button" class="  btn btn-sm btn-danger text-white" asp-controller="Schedule" asp-action="MoveShiftToArchive" asp-route-sId="@item.Id">
                        Archiwizuj
                    </a>
                </div>
            </td>
        </tr>
}
    </tbody>

</table>