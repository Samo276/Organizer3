@model FunctionsListModel
@{ 
}

@if (User.Identity.IsAuthenticated)
{
    
    @if (@Model.Access.Recruter)
    {
        <a type="button" class="w-100 mb-1 btn btn-outline-info text-dark" asp-controller="Recruiter" asp-action="RecruiterIndex">Rekrutacja</a>      
    }
    @if (@Model.Access.UserViewer)
    {
        <a type="button" class="w-100 mb-1 btn btn-outline-info text-dark" asp-controller="UserViewer" asp-action="UserViewerIndex">Pracownicy</a>
    }
    @if (@Model.Access.FacilityEditor)
    {
        <a type="button" class="w-100 mb-1 btn btn-outline-info text-dark" asp-controller="Facilities" asp-action="FacilitiesIndex">Sklepy</a>
    }
    @if (@Model.Access.Announcer)
    {
        <a type="button" class="w-100 mb-1 btn btn-outline-info text-dark" asp-controller="Announcements" asp-action="AnnouncerIndex">Ogłoszenia</a>
    }
    @if (@Model.Access.PersonalViewer)
    {
        <a type="button" class="w-100 mb-1 btn btn-outline-info text-dark" asp-controller="MyShop" asp-action="MyShopIndex">Mój Sklep</a>        
    }
    @if (@Model.Access.PartnerViewer)
    {
        <a type="button" class="w-100 mb-1 btn btn-outline-info text-dark" asp-controller="SiteFunctions" asp-action="SiteFunctionsIndex">Dodatkowe funkcje</a>        
    }  
}