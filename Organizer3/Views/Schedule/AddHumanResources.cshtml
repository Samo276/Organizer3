@using Organizer3.Models.MyShop
@using Organizer3.Views.MyShop
@using Organizer3.Views.Schedule
@model List<EmployeeNameAndIdModel>

<h4>Wybierz pracowników</h4>

<form class="form-group" asp-controller="Schedule" asp-action="adhd" method="post">
    


    @for(int i=0;i<@Model.Count()-1;i++)
    {
            <div class="form-group form-check">
                <label class="form-check-label">
                    @if (@Model[i].Participation)
                    {
                    <input class="form-check-input" asp-for="@Model[i].Participation" value="@Model[i].Participation" />
                    }else{<input class="form-check-input" asp-for="@Model[i].Participation" />}
                     @Model[i].Name
                </label>
                <input type="hidden"  asp-for="@Model[i].Id" value="@Model[i].Id" />
                <input type="hidden" asp-for="@Model[i].Name" value="@Model[i].Name" />
            </div>
            
    }
    <div style="display:none;"class="form-group form-check">
                <input type="hidden"  asp-for="@Model[@Model.Count()-1].Id" value="@Model[@Model.Count()-1].Id" />
                <input type="hidden" asp-for="@Model[@Model.Count()-1].Name" value="@Model[@Model.Count()-1].Name" />
            </div>
    <input type="submit" class="btn btn-primary" value="Zapisz pracowników na zmianie." />
</form>