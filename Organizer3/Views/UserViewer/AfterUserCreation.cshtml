@model Organizer3.Models.EmployeeEditor.AfterUserCreationModel
<h4>@("Utworzono użytkownika: "+@Model.name)</h4>
<hr/>
<h5>Przekaż pracownikowi:</h5>
<div class="col-md-5 row">
    <p>@("Login: "+@Model.login)</p>
    <p>@("Hasło: "+@Model.password)</p>   
</div>
<div class="col-md-5 mt-3">
    <button type="button" class="btn btn-primary">
        <a class="text-decoration-none text-white" asp-controller="UserViewer" asp-action="EditUserPhoto" asp-route-id="@Model.Id">
            Dodaj zdjęcie
        </a>
    </button>

    <button type="button" class="btn btn-secondary">
        <a class="text-decoration-none text-white" value="Zakończ" asp-controller="UserViewer" asp-action="UserViewerIndex">
            Zakończ
        </a>
    </button>
</div>

