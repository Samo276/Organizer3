@using Organizer3.Controllers

@model UserAccessDataEditModel

@{
    ViewData["Title"] = "UserAccessDataEditor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewBag.UserName</h1>

<h4>Uprawnienia dostepu do funkcji aplikacji.</h4>
